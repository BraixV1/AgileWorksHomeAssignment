@page
@model WebApp.Pages.Tasks.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1 xmlns="http://www.w3.org/1999/html">Create</h1>

<h4>Add new task</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ToDoTasks.Description" class="control-label"></label>
                <textarea asp-for="ToDoTasks.Description" class="form-control" > </textarea>
                <span asp-validation-for="ToDoTasks.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ToDoTasks.HasToBeDoneDt" class="control-label"></label>
                <input asp-for="ToDoTasks.HasToBeDoneDt" class="form-control" />
                <span asp-validation-for="ToDoTasks.HasToBeDoneDt" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
